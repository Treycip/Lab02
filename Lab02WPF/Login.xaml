<Window x:Class="Lab02WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab02WPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="INICIAR SESIÓN" Margin="0,10,0,10" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Width="200" MaxLength="100" Margin="10,0,10,10" HorizontalAlignment="Center" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="txtPassword" Width="200" MaxLength="100" Margin="10,0,10,10" HorizontalAlignment="Center" TextChanged="TextBox_TextChanged_1"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Iniciar Sesión" Click="Button_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Salir" Click="Button_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
